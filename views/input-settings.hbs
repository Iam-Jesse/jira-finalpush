{{!< layout}}

<div class="container">
  <header class="intro-header">
    <h1>Checkbox Settings</h1>
  </header>


  <div>
    <form action="/inputs?jwt={{token}}" method="POST">
      <div class="form-group">
        <label class="label" for="title">Field Title:</label>
        <input class="form-control form-control-sm form-input" name="title" type="text">
      </div>

      <div class="form-group">
        <label class="label" for="description">Field Description:</label>
        <textarea class="form-control form-control-sm form-input" rows="5" name="description"></textarea>
      </div>
      
      <div class="clearfix">
        <button type="submit" class="btn btn-primary button-color float-right">Save</button>
      </div>
    </form>
  </div>
  
  <header class="intro-header">
    <h1>Created Fields</h1>
  </header>
  
  <div id="created-fields" class="wrapper">
    {{#unless empty}}
      
        {{#each result}}
          <div class="row">
            <div class="col-10 col-sm-9 col-md-6">
              <p class="header">
                {{this.title}}
              </p>
              <p class="text-justify normal-text">
                {{this.description}}
              </p>
            </div>
            <div class="col-2 col-sm-3 col-md-6">
              <a href="#" class="normal-text" id="{{this._id}}"  onclick="deleteField('{{this._id}}')">Delete</a>
            </div>
          </div>
        {{/each}}
      
    {{else}}
    <p class="normal-text">
      No registered fields!
    </p>
    {{/unless}}
  </div>
  
  <header class="intro-header">
    <h1 style="margin-bottom: 0px">Preferences</h1>
    <p class="normal-text">
      Fields to display on Customer Request Page
    </p>
  </header>

  <form action="/preferences?jwt={{token}}" method="POST">
    <div>
      <div class="row">
        <div class="col-6 col-md-4 col-lg-3">
          <label class="label" for="attachment">Attachments</label>
        </div>
        <div class="col-6 col-md-4 col-lg-3">
          <input type="checkbox" class="form-check-input" value="true" name="attachment">
        </div>
      </div>
      <div class="row">
        <div class="col-6 col-md-4 col-lg-3">
          <label class="label" for="priority">Priority</label>
        </div>
        <div class="col-6 col-md-4 col-lg-3">
          <input type="checkbox" class="form-check-input" value="true" name="priority">
        </div>
      </div>
      <div class="row">
        <div class="col-6 col-md-4 col-lg-3">
          <label class="label" for="sla">SLAs</label>
        </div>
        <div class="col-6 col-md-4 col-lg-3">
          <input type="checkbox" class="form-check-input" value="true" name="sla">
        </div>
      </div>
    </div>
    <div class="clearfix">
      <button type="submit" class="btn btn-primary button-color float-right">Save</button>
    </div>
  </form>
</div>